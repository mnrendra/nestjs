{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "**/*test.ts"
  ]
}
